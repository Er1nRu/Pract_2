<Page x:Class="pract16.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract16"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reg">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Padding" Value="0 10"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox x:Name="Login" TextChanged="Login_TextChanged"/>
            <Label Content="Пароль"/>
            <TextBox x:Name="Password" TextChanged="Login_TextChanged"/>
            <Button x:Name="reg" Content="Зарегестрироваться" Click="Button_Click"/>
            <Button x:Name="clear" Content="Очистить" Click="clear_Click" />

        </StackPanel>
    </Grid>
</Page>
