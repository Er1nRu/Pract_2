<Window x:Class="pract16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem Header="Войти">
                <Frame x:Name="FrameLogin"/>
            </TabItem>
            <TabItem Header="Зарегестрироваться">
                <Frame x:Name="FrameReg"/>
            </TabItem>
            <TabItem Header="Сгенерировать">
                <Frame x:Name="FrameGen"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
