<Page x:Class="pract16.Generate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract16"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Generate">
      <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Padding" Value="0 10"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <Label x:Name="count" Content="кОЛ"/>
            <Slider x:Name="sld" Maximum="100" TickFrequency="5" Margin="10 0" ValueChanged="sld_ValueChanged" SmallChange="1" TickPlacement="BottomRight" LargeChange="5"/>
            <Button Content="Сгенерировать пользователей" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
